<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="product_label_layout">
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="article">
            <t t-raw="0"/>
        </div>
    </template>

    <template id="report_product_label">
	<t t-call="web.html_container">
		<t t-foreach="docs" t-as="product">
			<t t-call="ca_barcode_labels.product_label_layout">
				<div class="page">
					<table style="border:none;" width="100%">
						<tr style="border:none;">
							<td style="border:none;" width="20%">
								<t t-if="barcode_config.barcode" style="color:black;"
									align="left">
									<img
										t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=%s' %(barcode_config.barcode_type, product[3], int(barcode_config.display_width), int(barcode_config.display_height),is_humanreadable)" />
								</t>
								
							</td>
							<td style="font-size:6px;text-align:left;" width="30%">
								<t t-if="product[0].brand_id">
									<img
										t-att-src="image_data_uri(product[0].brand_id.logo)"
										style="max-height: 1cm; max-width: 3cm;" />
								</t>
							</td>
							<td style="text-align:left;font-size:6px;" width="50%">
								<span t-field="product[0].product_desc"/><br/>
								<span t-esc="product[2]"/>
								<!-- <t t-if="barcode_config.barcode" style="color:black;"
									align="right">
									<img
										t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=%s' %(barcode_config.barcode_type, product[3], int(barcode_config.display_width), int(barcode_config.display_height),is_humanreadable)" />
								</t> -->
							</td>
						</tr>
					</table>
				</div>
			</t>
		</t>
	</t>
</template>
</odoo>
