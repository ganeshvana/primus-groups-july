<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="product_label_layout">
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="article">
            <t t-raw="0"/>
        </div>
    </template>

    <template id="report_product_label">
	<t t-call="web.html_container">
		<t t-foreach="docs" t-as="product">
			<t t-call="ca_barcode_labels.product_label_layout">
				<div class="page">
					<table style="border:none;" width="100%">
						<tr style="border:none;">
							<td style="border:none;">
								<t t-if="product[0].brand_id">
									<img
										t-att-src="image_data_uri(product[0].brand_id.logo)"
										style="max-height: 1cm; max-width: 3cm;" />
								</t>
							</td>
							<td style="text-align:right">
								<t t-if="barcode_config.barcode" style="color:black;"
									align="right">
									<img
										t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=%s' %(barcode_config.barcode_type, product[3], int(barcode_config.display_width), int(barcode_config.display_height),is_humanreadable)" />
								</t>
							</td>
							<td style="font-size:6px;">
								<t style="font-size:8px;">
									<strong>
										SKU:
										<span t-field="product[0].default_code" />
									</strong>
								</t>
								<br />
								<t t-if="barcode_config.product_name" align="left"
									style="font-size:6px;">
									<span t-field="product[0].name" />
								</t>
								<br />
								<t align="left" style="font-size:6px;">
									1.00 Grams
									<br />
									MSRP
									<span t-field="product[0].standard_price"
										t-options='{"widget": "monetary", "display_currency": barcode_config.company_id.currency_id}' />
								</t>
							</td>
							
						</tr>
					</table>
				</div>
			</t>
		</t>
	</t>
</template>
</odoo>
