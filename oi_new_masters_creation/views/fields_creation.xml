<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<record id="product_template_page_view" model="ir.ui.view">
<field name="name">product.template.page.view</field>
<field name="model">product.template</field>
<field name="inherit_id" ref="product.product_template_only_form_view"/>
<field name="arch" type="xml">
<xpath expr="/form/sheet/notebook/page[@name='general_information']" position="replace">
<page string="Product Information" name="general_information">
<group>
<group name="group_general">
<field name="active" invisible="1"/>
<field name="stone"/>
<field name="metal"/>
<field name="type"/>
<field name="categ_id" string="Product Category"/>
<field name="name" string="Name" attrs="{'invisible': [('stone','=',False)]}"/>
<field name="shape" string="Shape" attrs="{'invisible': [('stone','=',False)]}"/>
<field name="size" string="Size" attrs="{'invisible': [('stone','=',False)]}"/>
<field name="color" string="Color" attrs="{'invisible': [('stone','=',False)]}"/>
<field name="cutting" string="Cutting" attrs="{'invisible': [('stone','=',False)]}"/>
<field name="quality" string="Quality" attrs="{'invisible': [('stone','=',False)]}"/>

<field name="finess" string="Fineness" attrs="{'invisible': [('metal','=',False)]}"/>
<field name="plating" string="Plating" attrs="{'invisible': [('metal','=',False)]}"/>
<field name="plating_thickness" string="Plating Thickness" attrs="{'invisible': [('metal','=',False)]}"/>
<field name="vendor" string="Vendor" attrs="{'invisible': [('metal','=',False)]}"/>
<field name="uom" string="UOM" attrs="{'invisible': [('metal','=',False)]}"/>

</group>
<group name="group_standard_price">
<label for="list_price"/>
<div name="pricing">
<field name="list_price" class="oe_inline" widget='monetary'
options="{'currency_field': 'currency_id', 'field_digits': True}"/>
<button name="open_pricelist_rules" icon="fa-arrow-right" type="object"
groups="product.group_product_pricelist" class="oe_inline">
<field name="pricelist_item_count" attrs="{'invisible': [('pricelist_item_count', '=', 0)]}"/>
<span attrs="{'invisible': [('pricelist_item_count', '=', 1)]}">
Extra Prices
</span>
<span attrs="{'invisible': [('pricelist_item_count', '!=', 1)]}">
Extra Price
</span>
</button>
</div>
<label for="standard_price" groups="base.group_user" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
<div name="standard_price_uom" groups="base.group_user" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}" class="o_row">
<field name="standard_price" widget='monetary' options="{'currency_field': 'cost_currency_id', 'field_digits': True}"/>
<span groups="uom.group_uom" class="oe_read_only">per
<field name="uom_name"/>
</span>
</div>

<field name="origin" attrs="{'invisible': [('stone','=',False)]}"/>
<field name="treatment" attrs="{'invisible': [('stone','=',False)]}"/>
<field name="certification_lab" attrs="{'invisible': [('stone','=',False)]}"/>
<field name="min_weight" attrs="{'invisible': [('stone','=',False)]}"/>
<field name="avg" attrs="{'invisible': [('stone','=',False)]}"/>
<field name="vendor" attrs="{'invisible': [('stone','=',False)]}"/>
<field name="avg_cost" string="Average Cost" attrs="{'invisible': [('metal','=',False)]}"/>
<field name="last_revised_cost" string="Last Revised Cost" attrs="{'invisible': [('metal','=',False)]}"/>

<field name="company_id" groups="base.group_multi_company"
options="{'no_create': True}"/>
<field name="uom_id" groups="uom.group_uom" options="{'no_create': True}"/>
<field name="uom_po_id" groups="uom.group_uom" options="{'no_create': True}"/>
<field name="currency_id" invisible="1"/>
<field name="cost_currency_id" invisible="1"/>
<field name="product_variant_id" invisible="1"/>
</group>
</group>
<group string="Internal Notes">
<field name="description" nolabel="1" placeholder="This note is only for internal purposes."/>
</group>
</page>
</xpath>
</field>
</record>



